<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../../lib/layui-v2.5.5/css/layui.css" media="all">
    <link rel="stylesheet" href="../../css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
<div class="layui-form layuimini-form">
    <div class="layui-form-item">
        <label class="layui-form-label required">目录名称</label>
        <div class="layui-input-block">
            <input type="text" name="catalogName" lay-verify="required" lay-reqtext="目录名称不能为空" placeholder="请输入目录名称" value="" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label required">目录信息</label>
        <div class="layui-input-block">
            <input type="text" name="catalogIntro" lay-verify="required" lay-reqtext="目录信息不能为空" placeholder="请输入目录信息" value="" class="layui-input">
        </div>
    </div>

    <div class="layui-form-item">
            <label class="layui-form-label required">选择部门</label>
            <div class="layui-input-inline">
                <select name="deptCode" lay-verify="required" class="listDept">
                    <option value="">请选择</option>
                </select>
            </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label required">是否格式化文件</label>
        <div class="layui-input-block">
            <input type="radio" lay-filter="formatType" name="isFormat" value="格式化文件" title="是" checked>
            <input type="radio" lay-filter="formatType" name="isFormat" value="非格式化文件" title="否" >
        </div>
    </div>

    <div class="layui-form-item" id="contents" style="display: block">
        <label class="layui-form-label required">上传字段模板文件</label>
        <label><input type="file" style="display:none" id="file" name="file">
            <a class="layui-btn layui-btn-normal layui-btn-sm"><i class="layui-icon"></i>文件上传</a>
        </label>
<!--            <button type="button" class="layui-btn layui-btn-normal layui-btn-sm" id="test3"><i class="layui-icon"></i>上传文件</button>-->
        <a href="http://localhost:8181/download/table.xls" class="layui-btn layui-btn-normal layui-btn-sm"><i class="layui-icon layui-icon-download-circle"></i> 字段模板下载</a>
    </div>

    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="saveBtn">确认保存</button>
    </div>
    </div>
</div>
<script src="../../lib/layui-v2.5.5/layui.js" charset="utf-8"></script>
<script>

    layui.use(['form'], function () {
        var form = layui.form,
            layer = layui.layer,
            $ = layui.$;

        form.on('radio(formatType)', function(data){
            if(data.value === '非格式化文件'){
                $("#contents").css("display", "none");
            } else {
                $("#contents").css("display", "block");
            }
        });

        $(function () {
            $.post("http://localhost:8181/sgsb/dept/list_dept?deptCode="+sessionStorage.getItem('deptCode'), function (res) {
                var deptList = res.data;
                for (var k in deptList)
                {
                    $(".listDept").append("<option value='" + deptList[k].deptCode + "'>" + deptList[k].deptName + "</option>");
                }
                layui.use('form', function () {
                    var form = layui.form;
                    form.render();
                });
            });
        })

        //监听提交
        form.on('submit(saveBtn)', function (datas) {
            // var params = "?catalogName="+datas.field.catalogName+"&catalogIntro="+datas.field.catalogIntro+"&deptCode="+datas.field.deptCode+"&isFormat="+datas.field.isFormat+"&token="+sessionStorage.getItem('token');
            // console.log(params);
            var fd = new FormData();
            fd.append("catalogName",datas.field.catalogName);
            fd.append("catalogIntro",datas.field.catalogIntro);
            fd.append("deptCode",datas.field.deptCode);
            fd.append("isFormat",datas.field.isFormat);
            fd.append("token",sessionStorage.getItem('token'));
            fd.append("file", $('#file').files[0]);
            console.log(fd);
            $.ajax({
                type: "post",
                url: "http://localhost:8181/sgsb/resource-catalog/add_resource_catalog",
                data:fd,
                processData: false,
                contentType: false,
                dataType: "json",
                success: function (res) {
                    layer.msg(res.msg);
                    if(res.success){
                        setTimeout(() => {
                            var iframeIndex = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(iframeIndex);
                        }, 2000);
                    }
                }
            });
            return false;
        });

    });
</script>
</body>
</html>